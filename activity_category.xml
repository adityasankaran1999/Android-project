<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.purdue.cs.sankara2.todolist.CategoryActivity">
<!-- TODO: The design of this layout is left for you. Refer to 'activity_item.xml'. You can easily reuse it -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/category_title"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/delete_btn"
                android:clickable="false"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:src="@drawable/ic_delete_black_18dp"
                android:visibility="invisible"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingBottom="10dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Category Name:"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/category_edittext"
                android:layout_width="0dp"
                android:layout_weight=".75"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:padding="10dp"
                android:id="@+id/cancel_btn"
                android:text="Cancel"
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:layout_height="wrap_content" />
            <Button
                android:padding="10dp"
                android:id="@+id/add_btn"
                android:text="Add"
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
